<%# View for displaying all airplanes in a list. %>

<h1>All airplanes</h1>

<div>
  <table class="table">
    <%# Column labels %>
    <tr>
      <th>Name</th>
      <th>Ident</th>
      <th>Type</th>
      <th>CMP</th>
      <th>HP</th>
      <th>TW</th>
      <th>HA</th>
      <th>TURB</th>
      <th>GLI</th>
      <th>ROT</th>
      <th>PL</th>
      <th>LTA</th>
      <th>SEL</th>
      <th>SES</th>
      <th>MEL</th>
      <th>MES</th>
      <th>Sim</th>
    </tr>

    <%# Dsiplay this for each airplane in the list %>
    <% for airplane in @airplane_list %>
      <tr>
        <td><%= link_to airplane.display_name, :controller => "airplanes", :action => "show",
                :id => airplane.id %></td>
        <td><%= airplane.identification %></td>
        <td><%= airplane.airplane_type %></td>
        <td><%= display_boolean_icon(airplane.complex) %></td>
        <td><%= display_boolean_icon(airplane.high_performance) %></td>
        <td><%= display_boolean_icon(airplane.tailwheel) %></td>
        <td><%= display_boolean_icon(airplane.high_altitude) %></td>
        <td><%= display_boolean_icon(airplane.turbine) %></td>
        <td><%= display_boolean_icon(airplane.glider) %></td>
        <td><%= display_boolean_icon(airplane.rotorcraft) %></td>
        <td><%= display_boolean_icon(airplane.powered_lift) %></td>
        <td><%= display_boolean_icon(airplane.lighter_than_air) %></td>
        <td><%= display_boolean_icon(airplane.single_engine_land) %></td>
        <td><%= display_boolean_icon(airplane.single_engine_sea) %></td>
        <td><%= display_boolean_icon(airplane.multi_engine_land) %></td>
        <td><%= display_boolean_icon(airplane.multi_engine_sea) %></td>
        <td><%= display_boolean_icon(airplane.simulator) %></td>
      </tr>
    <% end %>

  </table>

  <br />

  <%= link_to "Add Airplane", new_airplane_path, class: "btn btn-default" %>
</div>
