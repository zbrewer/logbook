<%# View for displaying all airplanes in a list. %>

<h1>All airplanes</h1>

<div>
  <table class="table">
    <%# Column labels %>
    <tr>
      <th>Name</th>
      <th>Ident</th>
      <th>Type</th>
      <th>CMP</th>
      <th>HP</th>
      <th>TW</th>
      <th>HA</th>
      <th>TURB</th>
      <th>GLI</th>
      <th>ROT</th>
      <th>PL</th>
      <th>LTA</th>
      <th>SEL</th>
      <th>SES</th>
      <th>MEL</th>
      <th>MES</th>
      <th>Sim</th>
    </tr>

    <%# Dsiplay this for each airplane in the list %>
    <% for airplane in @airplane_list %>
      <tr>
        <td><%= link_to airplane.display_name, :controller => "airplanes", :action => "show",
                :id => airplane.id %></td>
        <td><%= airplane.identification %></td>
        <td><%= airplane.airplane_type %></td>
        <td><%= airplane.complex %></td>
        <td><%= airplane.high_performance %></td>
        <td><%= airplane.tailwheel %></td>
        <td><%= airplane.high_altitude %></td>
        <td><%= airplane.turbine %></td>
        <td><%= airplane.glider %></td>
        <td><%= airplane.rotorcraft %></td>
        <td><%= airplane.powered_lift %></td>
        <td><%= airplane.lighter_than_air %></td>
        <td><%= airplane.single_engine_land %></td>
        <td><%= airplane.single_engine_sea %></td>
        <td><%= airplane.multi_engine_land %></td>
        <td><%= airplane.multi_engine_sea %></td>
        <td><%= airplane.simulator %></td>
      </tr>
    <% end %>

  </table>

  <br />

  <%= link_to "Add Airplane", new_airplane_path, class: "btn btn-default" %>
</div>
